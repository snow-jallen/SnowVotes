@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>
<form method="post">
    <button asp-page-handler="TacoVote">Tacos</button>
    <button asp-page-handler="HamburgerVote">Hamburgers</button>
    <button asp-page-handler="PizzaVote">Pizza</button>
    <p>TacoCount: @Model.TacoCount</p>
    <p>HamburgerCount: @Model.HamburgerCount</p>
     <p>PizzaCount: @Model.PizzaCount</p>

</form>
